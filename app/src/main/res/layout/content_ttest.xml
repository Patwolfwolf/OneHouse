<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ttest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ruiwen.onehouse.ttest"
    tools:showIn="@layout/activity_ttest">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Calculating Z Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView70"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:weightSum="1">

            <TextView
                android:text="P ( "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView73"
                android:textSize="25sp" />

            <EditText
                android:ems="10"
                android:id="@+id/editText11"
                android:textSize="25sp"
                android:inputType="number|numberSigned|numberDecimal"
                android:layout_height="match_parent"
                android:layout_width="75dp"
                android:layout_alignBaseline="@+id/textView72"
                android:layout_alignBottom="@+id/textView72"
                android:layout_toRightOf="@+id/button18"
                android:layout_toLeftOf="@+id/textView72"
                android:layout_toStartOf="@+id/textView72"
                android:text="a"
                android:textAlignment="center" />

            <TextView
                android:text="&lt; x &lt;"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView72"
                android:textSize="28sp"
                android:layout_alignTop="@+id/textView71"
                android:layout_toRightOf="@+id/button19"
                android:layout_toEndOf="@+id/button19"
                android:textAlignment="center" />

            <EditText
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText13"
                tools:text="b"
                android:textSize="25sp"
                android:textAlignment="center" />

            <TextView
                android:text=") ="
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView74"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="1">

            <TextView
                android:text="Mean: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView76"
                android:textSize="25sp" />

            <EditText
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/mean"
                android:layout_weight="0.56"
                android:inputType="number|numberSigned|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <TextView
                android:text="Standard Deviation :"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:id="@+id/textView77"
                android:textSize="25sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sd"
                android:layout_weight="1"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Calculate!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button18"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="169dp" />

    <TextView
        android:text="ENTER: P(a&lt;x) or P(x&lt;b) or P(a&lt;x&lt;b)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView75"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
